{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "lib",
    "lib": ["dom", "es5", "es2015", "es2016", "es2017"],
    "esModuleInterop": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.*"],
  "exclude": ["src/**/*.spec.ts"]
}
